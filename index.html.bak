<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Container styling */
        .image-container {
            width: 100%;
            height: 100vh; /* 100% of the viewport height */
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden; /* Hide any overflowing content */
        }

        /* Make the image stretch to fill the entire size of the container */
        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Optional: Maintain aspect ratio and cover entire container */
        }
    </style>
    <!-- Replace 'https://new-source.com/mraid.js' with the actual URL of your mraid.js file -->
    <script src="mraid.js"></script>
    <title>Responsive Image</title>
</head>
<body>

    <!-- Container for the image -->
    <div class="image-container">
        <!-- Replace 'your-image.jpg' with the actual path to your image -->
        <img src="your-image.jpg" alt="Description of the image">
    </div>

    <!-- Unity Ads MRAID initialization -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            if (window.mraid) {
                mraid.useCustomClose(true);
                
                // Open the provided link when the image is clicked
                document.querySelector('.image-container img').addEventListener('click', function() {
                    mraid.open('https://play.google.com/store/apps/details?id=com.lucidlabs.bloom');
                });
            }
        });
    </script>

</body>
</html>
