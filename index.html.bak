<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Make the image stretch to fill the entire size of the device */
        img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Maintain aspect ratio and cover entire container */
            display: block;
            margin: 0 auto; /* Center the image */
        }
    </style>
    <!-- Replace 'https://new-source.com/mraid.js' with the actual URL of your mraid.js file -->
    <script src="https://new-source.com/mraid.js"></script>
    <title>Responsive Image</title>
</head>
<body>

    <!-- Replace 'your-image.jpg' with the actual path to your image -->
    <img src="your-image.jpg" alt="Description of the image">

    <!-- Unity Ads MRAID initialization -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            if (window.mraid) {
                mraid.useCustomClose(true);
                
                // Open the provided link when the image is clicked
                document.querySelector('img').addEventListener('click', function() {
                    mraid.open('https://play.google.com/store/apps/details?id=com.lucidlabs.bloom');
                });
            }
        });
    </script>

</body>
</html>
