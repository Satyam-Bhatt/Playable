<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
		body{
			margin: 0;
			padding: 0;
		}
        /* Container styling */
        .image-container {
            width: 100vw;
            height: 100vh; 
            overflow: hidden; 
			display: flex;
			justify-content: center;
			align-items: center;
        }

        /* Make the image stretch to fill the entire size of the container */
        .image-container img {
            width: auto;
            height: 100%;
            object-fit: fill;
			display: block;
			margin: 0 auto;
        }
    </style>
    <!-- Replace 'https://new-source.com/mraid.js' with the actual URL of your mraid.js file -->
    <script src="mraid.js"></script>
    <title>Responsive Image</title>
</head>
<body>

    <!-- Container for the image -->
    <div class="image-container">
        <!-- Replace 'your-image.jpg' with the actual path to your image -->
        <img src="D4.png" alt="Description of the image">
    </div>

    <!-- Unity Ads MRAID initialization -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        if (window.mraid) {
            mraid.useCustomClose(true);
            
            // Open the appropriate app store link when the image is clicked
            document.querySelector('.image-container img').addEventListener('click', function() {
                // Determine the platform and open the corresponding link
                var platform = getMobileOperatingSystem();
                switch (platform) {
                    case "Android":
                        mraid.open("https://play.google.com/store/apps/details?id=com.lucidlabs.bloom");
                        break;
                    case "iOS":
                        mraid.open("https://apps.apple.com/us/app/bloom-a-puzzle-adventure/id1577359755");
                        break;
                    default:
                        // Default behavior (for other platforms)
                        break;
                }
            });
        }
    });

    // Function to detect the mobile operating system
    function getMobileOperatingSystem() {
        var userAgent = navigator.userAgent || navigator.vendor || window.opera;
        if (/android/i.test(userAgent)) {
            return "Android";
        }
        if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
            return "iOS";
        }
        return "Other";
    }
</script>

</body>
</html>
